<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/bg_contrast"
	android:orientation="vertical"
>
	<LinearLayout 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:background="@drawable/brand_bg"
	    android:orientation="horizontal">
	    <ImageView android:id="@+id/brand_logo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/brand_logo"				    
		/>
		<TextView
	        android:text="@string/brand_motto"
	        android:textSize="18sp"
	        android:textStyle="bold"
	        android:textColor="#6f5630"
	        android:layout_height="fill_parent"
	        android:layout_width="fill_parent"
	        android:layout_gravity="center_vertical"
	        android:gravity="center"/>				
	</LinearLayout>
	<ScrollView style="@style/UsbongDefaultScrollView"
	>		 	
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
		>
			<TextView
		        style="@style/UsbongLoginEditText"
		        android:id="@+id/contact_textview"
		        android:textColorHint="#9a9898"
		        android:padding="5dp"        
		        android:layout_marginTop="5dp"
		        android:textColor="#6f5630"
		        android:textStyle="bold"
		        android:text="How may we help you?"
		    />					    	 
	    	<EditText
	        style="@style/UsbongLoginEditText"
	        android:id="@+id/first_name"
	        android:hint="First Name"
	        android:background="@drawable/rect_text_edit"
	        android:textColorHint="#9a9898"
	        android:padding="5dp"        
	        android:layout_marginTop="5dp"        
			/>
			<EditText
		        style="@style/UsbongLoginEditText"
		        android:id="@+id/surname"
		        android:hint="Surname"
		        android:background="@drawable/rect_text_edit"
		        android:textColorHint="#9a9898"
		        android:padding="5dp"        
		        android:layout_marginTop="5dp"        
			/>       	
			<RadioGroup
			    android:id="@+id/item_type_radiogroup"
			    style="@style/UsbongLoginEditText"	
			    android:padding="5dp"        
		        android:layout_marginTop="5dp"  	
		        android:orientation="vertical"    
		        android:layout_width="wrap_content"	        
			    >
			    <RadioButton
			        android:id="@+id/feedback_radiobutton"	               
			    	style="@style/UsbongLoginEditText"	
			        android:text="General feedback, no need to reply"
			        android:textColor="#6f5630"
		        	android:textStyle="bold"
			        />
			    <RadioButton
			        android:id="@+id/issue_radiobutton"	               
			        style="@style/UsbongLoginEditText"	 
			        android:text="Need help with an issue"
			        android:textColor="#6f5630"
		        	android:textStyle="bold"
			        />
			    <RadioButton
			        android:id="@+id/development_radiobutton"	               
			        style="@style/UsbongLoginEditText"	 
			        android:text="Need help with software development"
			        android:textColor="#6f5630"
		        	android:textStyle="bold"
			        />			    
			</RadioGroup>		
			<EditText
		        style="@style/UsbongLoginEditText"
		        android:id="@+id/subject"
		        android:hint="Subject"
		        android:background="@drawable/rect_text_edit"
		        android:textColorHint="#9a9898"
		        android:padding="5dp"        
		        android:layout_marginTop="5dp"        
			/>
		   	<EditText
		        style="@style/UsbongLoginEditText"
		        android:id="@+id/description"
		        android:hint="Description"
		        android:background="@drawable/rect_text_edit"
		        android:textColorHint="#9a9898"
		        android:padding="5dp"        
		        android:layout_marginTop="5dp"        
		        android:layout_marginBottom="10dp"        
		        android:lines="4"	        
			/>		
		</LinearLayout>		
	</ScrollView>	
	<LinearLayout
		style="@style/UsbongDefaultBuySellRequestButtonLayout">	
		<Button android:id="@+id/send_button"
		    style="@style/UsbongDefaultBuySellRequestButton"
			android:text="@string/send" 
			android:layout_width="256dp"
			android:background="@drawable/button_yellow"/>		    
	</LinearLayout>		
</LinearLayout>