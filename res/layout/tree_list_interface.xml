<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/bg"
	android:orientation="vertical"
>
	<EditText android:id="@+id/search_edittext"
			style="@style/UsbongDefaultEditText"	
			android:imeOptions="actionSearch"
			android:inputType="text"
			android:singleLine="true"
            android:ellipsize="end"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:hint="I'm looking for..."
            android:textColorHint="#b7b7b7"
            android:textSize="24dp"
            android:drawableRight="@drawable/magnifying_glass"
	/>
	<LinearLayout 
	    android:id="@+id/brand_bg"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:background="@drawable/brand_bg"
	    android:orientation="horizontal">
	    <ImageView android:id="@+id/brand_logo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/brand_logo"				    
		/>
		<TextView
		    android:id="@+id/brand_motto"
	        android:text="@string/brand_motto"
	        android:textSize="18sp"
	        android:textStyle="bold"
	        android:textColor="#6f5630"
	        android:layout_height="fill_parent"
	        android:layout_width="fill_parent"
	        android:layout_gravity="center_vertical"
	        android:gravity="center"/>				
	</LinearLayout>
	<HorizontalScrollView 
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:fillViewport="true"
	    android:measureAllChildren="false"
	    android:scrollbars="none"	
   	>		
		<LinearLayout
			android:id="@+id/category_linearlayout"	    
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:background="#706f5630"
		>
		</LinearLayout>
	</HorizontalScrollView>
	<ListView
		android:id="@+id/tree_list_view"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:cacheColorHint="#00000000"
		android:divider="#6d8f48"
		android:dividerHeight="3dp"
		android:layout_marginLeft="6dp"
		android:layout_marginRight="6dp"		
	/>
</LinearLayout>